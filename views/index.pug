doctype html
html(lang='en')
    block header
        head
            meta(charset='UTF-8')
            meta(name='viewport' content='width=device-width, initial-scale=1.0')
            if title
                title Image Compression | #{title}
            else
                title Image Compression
            link(rel='stylesheet' href='/vendor/css/plugin.css')
            link(rel='stylesheet' href='/css/style.css')
            body
                .container-fluid(id=pageId class=`${pageClass === undefined ? '' : pageClass}`)
                    //.cube-convert
                    //    div.animate_cube
                    //        div.animate_cube--1
                    //        div.animate_cube--2
                    //        div.animate_cube--3
                    header
                        p Compression
                    form#uploadForm
                        .box
                            .box--left
                                i.fas.fa-plus
                            .box--right
                                p Add or drop your files
                                p jpg, png, gif, pdf, mov, mp3
                            label(for="file")
                            input(type="file" id="file" accept=".gif, .jpg, .jpeg, .png, .mp3, .mp4, .avi, .mov, .pdf" multiple)
                            .cube_box
                                .close_arrow
                                    i.fas.fa-times
                                img(src="/img/pdf.png")
                                p Uploading...
                                p.fileName food.pdf
                                //- 100% empty, 0% full
                                .cu-bar.bar-principal
                                    .face.side-0
                                        .growing-bar
                                        //- .growing-bar(style='transform: translateY(100%);')
                                    .face.side-1
                                        .growing-bar
                                        //- .growing-bar(style='transform: translateY(100%);')
                                    .face.top
                                    //- 7 full 5 empty
                                    .face.floor
                                    //- .face.floor(style='transform: rotateX(-90deg) translateY(0em) translateZ(-5em) rotate(180deg);')
                                p.fileSize
                script(src='/vendor/js/plugin.js')
                script(src='/js/bundle.js')
